<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoMobile.View.AcceptOrderPage">
    <ScrollView>
        <StackLayout>
            <!--HEADER-->
            <StackLayout Padding="5" Margin="5">
                <Grid>
                    <Label Text="Order Information" 
                       FontSize="35" 
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" 
                       Margin="5"/>
                </Grid>
            </StackLayout>
            <!--ORDER INFORMATION -->
            <StackLayout x:Name="OrderInfoStackLayout" Spacing="10" Margin="5,5,5,0" IsVisible="true">
                <Grid BindingContext="{Binding SelectedOrder}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="1" Grid.Column="0" Text="Operatör:" FontSize="Medium"/>
                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding StaffName}" FontSize="Medium"/>

                    <Label Grid.Row="3" Grid.Column="0" Text="När:" FontSize="Medium"/>
                    <Label Grid.Row="3" Grid.Column="1" Text="{Binding StartingDate}" FontSize="Medium"/>

                    <Label Grid.Row="4" Grid.Column="0" Text="Arbetsuppgift:" FontSize="Medium"/>
                    <Label Grid.Row="4" Grid.Column="1" Text="{Binding OrderDescription}" FontSize="Medium"/>

                    <Label Grid.Row="5" Grid.Column="0" Text="Kund:" FontSize="Medium"/>
                    <Label Grid.Row="5" Grid.Column="1" Text="{Binding CustomerName}" FontSize="Medium"/>

                    <Label Grid.Row="6" Grid.Column="0" Text="KundAdress:" FontSize="Medium"/>
                    <Label Grid.Row="6" Grid.Column="1" Text="{Binding CustomerAddress}" FontSize="Medium"/>

                    <Label Grid.Row="7" Grid.Column="0" Text="KundTelefon:" FontSize="Medium"/>
                    <Label Grid.Row="7" Grid.Column="1" Text="{Binding CustomerPhoneNo}" FontSize="Medium"/>
                </Grid>
                
                <StackLayout Padding="60">
                <Button x:Name="AcceptOrderButton"
                        BackgroundColor="LawnGreen"
                        Clicked="AcceptOrderButton_Clicked"
                        Command="{Binding AcceptCommand}"
                        Text="{Binding ButtonText}"/>
                <Button x:Name="DeclineOrderButton"
                        Clicked="DeclineOrderButton_Clicked"
                        Text="Decline Order"
                        BackgroundColor="Red"
                        Command="{Binding DeclineCommand}"
                        IsVisible="True"/>
                <Button x:Name="UndoAcceptedOrderButton"
                        BackgroundColor="Red"
                        Clicked="UndoAcceptedOrderButton_Clicked"
                        Text="Undo Accepted Order"
                        Command="{Binding UndoCommand}"
                        IsVisible="True"/>
                </StackLayout>
                
            </StackLayout>

            <StackLayout x:Name="RegisterAdditionalInformation" Spacing="10" Padding="20" Margin="5,50,5,0" IsVisible="false">
                <Label Text="Extra kostnader:" FontSize="Medium"/>
                <Entry x:Name="ExtraCostEntry" 
                       Keyboard="Numeric"
                       Placeholder="0"
                       Text="{Binding ExtraCostText, Mode=TwoWay}"/>
                <Label Text="Restid:" />
                <Entry x:Name="TravelTimeEntry"
                       Keyboard="Numeric"
                       Text="{Binding TravelTimeText, Mode=TwoWay}"/>
                <Label Text="Arbetstid:"/>
                <Entry x:Name="WorkHoursEntry"
                       Keyboard="Numeric"
                       Text="{Binding HoursSpentText, Mode=TwoWay}"/>
                <Label Text="Kommentar:" />
                <Entry x:Name="CommentsEntry"
                       Text="{Binding CommentaryText, Mode=TwoWay}"/>

                <Button x:Name="CompleteOrderButton"
                        BackgroundColor="LawnGreen"
                        Clicked="CompleteOrderButton_Clicked"
                        Command="{Binding CompleteCommand}"
                        Text="Complete order"/>

            </StackLayout>
            
            
    
           
        </StackLayout>
    </ScrollView>
</ContentPage>